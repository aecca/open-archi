//- Image mixins
mixin img-responsive(_src,_alt, _style)
	img&attributes(attributes).img-responsive(src=_src, alt=_alt, style=_style)
	
mixin img-responsive-center(_src,_alt, _style)
	img&attributes(attributes).img-responsive.center-block(src=_src, alt=_alt, style=_style)

mixin img-rounded(_src,_alt, _style)
	img&attributes(attributes).img-rounded(src=_src, alt=_alt, style=_style)
	
mixin img-circle(_src,_alt, _style)
	img&attributes(attributes).img-circle(src=_src, alt=_alt, style=_style)
	
mixin img-thumbnail(_src,_alt, _style)
	img&attributes(attributes).img-thumbnail(src=_src, alt=_alt, style=_style)
