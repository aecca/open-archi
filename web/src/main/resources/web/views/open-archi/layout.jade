extends ../layout

block body
    // Fixed navbar
    +navbar-fixed-logo("menu", null, "navbar", null, "/open-archi", "/images/open-archi.png", "#1E97C2")(width="90px", height="50px")
        block extra-menu-elements
        if authorized
            +nav_item("#")= name
            +nav_item("#")
                +img-thumbnail(avatar, 'Profile avatar', 'padding: 0; margin: 0')(width="35px", height="35px")
            +nav_item("#")
                a.btn.btn-danger(href='/open-archi/logout') Logout
    block content